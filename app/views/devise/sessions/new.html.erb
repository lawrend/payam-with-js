<div class="jumbotron">
  <div class="container text-boxer">
    <div class="container" style="border-bottom: 1px solid; margin-bottom: 25px">
      <h1 class="goudy">Sign in</h1>
    </div>
    <div class="container">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :email, :class => "col-sm-3 control-label" %>
          <div class="col-sm-8">
            <%= f.email_field :email, autofocus: true, :class => "form-control" %>
          </div><!--div col-sm-8-->
        </div><!--form-group-->
        <div class="form-group">
          <%= f.label :password, :class => "col-sm-3 control-label" %>
          <div class="col-sm-8">
            <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
          </div><!--div col-sm-8-->
        </div><!--form-control-->
        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <div class="col-sm-3 control-label">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
        <% end -%>
        <div class="form-group" style="border-bottom: 1px solid; padding-bottom: 16px">
          <div class="col-sm-3 control-label">
            <%= f.submit "Sign in", :class => "btn btn-default" %>
          </div>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
